@code {
    [CascadingParameter] public CascadingAppState AppState { get; set; }

    List<Genre> genres = Globals.Genres();

    protected override async Task OnInitializedAsync()
    {
        AppState.BigPlayerUI = false;
        AppState.UiReady = true;       
    }
}
